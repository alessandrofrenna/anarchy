#!/bin/bash

# Original reference https://github.com/basecamp/omarchy/blob/dev/bin/omarchy-cmd-tzupdate
# ======================================================================================
# Based on Omarchy script: omarchy-cmd-tzupdate
# ======================================================================================

sudo systemctl restart systemd-timesyncd
sudo tzupdate
new_timezone=$(timedatectl show -p Timezone --value)
restart-app waybar
notify-send "Time synced and timezone set to $new_timezone"