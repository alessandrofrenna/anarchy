#!/bin/bash

# Power menu (script taken from Omarchy)
# Provides power off, restart, and sleep options

# Function to show power menu
show_power_menu() {
  local menu_options="\u200B Relaunch
\u200C Lock
\u200D󰤄 Suspend
\u2060󰜉 Restart
\u2063󰐥 Shutdown" # These first characters are invisible sort keys

  local selection=$(echo -e "$menu_options" | wofi --show dmenu --prompt "Power Options" --width 150 --height 180 -O alphabetical --style $HOME/.local/share/anarchy/default/wofi/select.css)

  case "$selection" in
  *Relaunch*) hyprctl dispatch exit ;;
  *Lock*) hyprlock ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  esac
}

# Main execution
show_power_menu
