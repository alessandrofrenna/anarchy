#!/bin/bash
THEMES_DIR="$HOME/.local/share/anarchy/themes/"
CURRENT_THEME_DIR="$HOME/.local/share/anarchy/config/current_theme"
CURRENT_THEME_NAME_FILE="$HOME/.local/share/anarchy/themes/.current_theme"

# Unstow the previous theme, if one is set
if [ -f "${CURRENT_THEME_NAME_FILE}" ]; then
    PREVIOUS_THEME=$(cat "${CURRENT_THEME_NAME_FILE}")
    echo "--- Unstowing previous theme: ${PREVIOUS_THEME} ---"
    stow -v -D -d "${THEMES_DIR}" -t "${CURRENT_THEME_DIR}" "${PREVIOUS_THEME}"
fi

THEMES=($(find "${THEMES_DIR}" -mindepth 1 -maxdepth 1 -type d | sort))
TOTAL=${#THEMES[@]}
# Find current theme index
INDEX=0
for i in "${!THEMES[@]}"; do
  THIS_THEME=$(basename "${THEMES[$i]}")
  if [[ "${THIS_THEME}" == "${PREVIOUS_THEME}" ]]; then
    INDEX=$i
    break
  fi
done

# Get next theme (wrap around)
NEXT_INDEX=$(((INDEX + 1) % TOTAL))
NEW_THEME=${THEMES[$NEXT_INDEX]}
NEW_THEME_NAME=$(basename "$NEW_THEME")

# Stow the new theme
echo "--- Stowing new theme: ${NEW_THEME_NAME} ---"
stow -v -S -d "${THEMES_DIR}" -t "${CURRENT_THEME_DIR}" "${NEW_THEME_NAME}"
echo "${NEW_THEME_NAME}" > "${CURRENT_THEME_NAME_FILE}"

# Touch alacritty config to pickup the changed theme
touch "$HOME/.local/share/anarchy/config/alacritty/alacritty.toml"

# Restart for new theme
pkill -SIGUSR2 waybar
makoctl reload
hyprctl reload

# Set new background
CURRENT_THEME_BACKGROUNDS_DIR="${CURRENT_THEME_DIR}/backgrounds/"
ln -nsf $(find "${CURRENT_THEME_BACKGROUNDS_DIR}" -type f | sort | head -n 1) "${CURRENT_THEME_DIR}/current_background"
pkill -x swaybg
setsid swaybg -i "$HOME/.local/share/anarchy/config/current_theme/current_background" -m fill &

# Notify of the new theme
notify-send "âœ… Theme changed to $NEW_THEME_NAME" -t 2000